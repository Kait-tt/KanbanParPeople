<li class="card" draggable="true" data-toggle="modal" data-target="#issue-detail-modal" data-bind="
    click: $root.selectedIssue,
    event: {
        dragstart: $root.dragAndDrop.ondragstart,
        dragover: $root.dragAndDrop.ondragover,
        drop: $root.dragAndDrop.ondrop
    }">
    <div class="mini-menu">
        <div class="mini-menu-default">
            <button type="button" class="btn btn-sm btn-default">
                <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
            </button>
        </div>
        <ul class="mini-menu-list">
            <li>
                <button type="button" class="btn btn-sm btn-default"
                        data-toggle="modal" data-target="#issue-detail-modal"
                        data-bind="click: $root.onClickIssueDetail">
                    <span class="glyphicon glyphicon-th" aria-hidden="true"></span>
                </button>
            </li>

            <li>
                <button type="button" class="btn btn-sm btn-default"
                        data-bind="click: $root.onClickIssueNextStage,
                            css: {disabled: stage() === 'backlog' || stage() === 'done'},
                            attr: {disabled: stage() === 'backlog' || stage() === 'done'}">
                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                </button>
            </li>

            <li>
                <button type="button" class="btn btn-sm btn-default"
                        data-bind="click: $root.onClickIssueRemove">
                    <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                </button>
            </li>

            <li>
                <button type="button" class="btn btn-sm btn-default"
                        data-toggle="modal" data-target="#assign-issue-modal"
                        data-bind="click: $root.onClickIssueAssign">
                    <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
                </button>
            </li>

            <li>
                <button type="button" class="btn btn-sm btn-default"
                        data-bind="click: $root.onClickIssuePrevStage,
                            css: {disabled: stage() === 'issue' || stage() === 'done'},
                            attr: {disabled: stage() === 'issue' || stage() === 'done'}">
                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                </button>
            </li>
        </ul>
    </div>

    <span class="card-title" data-bind="text: title"></span>
</li>